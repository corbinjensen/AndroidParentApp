<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_children">

    <fragment
        android:id="@+id/navigation_children"
        android:name="ca.sfu.fluorine.parentapp.view.children.ChildrenFragment"
        android:label="@string/title_children"
        tools:layout="@layout/fragment_children" />

    <fragment
        android:id="@+id/navigation_coin_flip"
        android:name="ca.sfu.fluorine.parentapp.view.CoinFlipFragment"
        android:label="@string/title_coin_flip"
        tools:layout="@layout/fragment_coin_flip" />

    <navigation android:id="@+id/navigation_timeout"
        app:startDestination="@id/timeout_selector">
        <fragment
            android:id="@+id/timeout_running"
            android:name="ca.sfu.fluorine.parentapp.view.timeout.TimeoutRunningFragment"
            android:label="@string/title_timeout"
            tools:layout="@layout/fragment_timeout_running">
            <action
                android:id="@+id/reset_timer_action"
                app:destination="@id/timeout_selector"
                app:popUpTo="@id/timeout_running"
                app:popUpToInclusive="true" />
            <argument
                android:name="expiredTime"
                android:defaultValue="-1L"
                app:argType="long" />
            <action
                android:id="@+id/redirect_to_end_screen"
                app:destination="@id/timeout_finish_fragment"
                app:popUpTo="@id/timeout_running"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/timeout_finish_fragment"
            android:name="ca.sfu.fluorine.parentapp.view.timeout.TimeoutFinishFragment"
            android:label="@string/title_timeout"
            tools:layout="@layout/fragment_timeout_finish">
            <action
                android:id="@+id/return_to_timeout"
                app:destination="@id/timeout_selector"
                app:popUpTo="@id/timeout_finish_fragment"
                app:popUpToInclusive="true" />
        </fragment>
        <dialog
            android:id="@+id/custom_timer_dialog"
            android:name="ca.sfu.fluorine.parentapp.view.timeout.CustomTimerDialog"
            android:label="dialog_custom_timer"
            tools:layout="@layout/dialog_custom_timer">
            <action
                android:id="@+id/run_custom_timer_action"
                app:destination="@id/timeout_running"
                app:popUpTo="@id/timeout_selector"
                app:popUpToInclusive="true" />
        </dialog>
        <fragment
            android:id="@+id/timeout_selector"
            android:name="ca.sfu.fluorine.parentapp.view.timeout.TimeoutSelectorFragment"
            android:label="@string/title_timeout"
            tools:layout="@layout/fragment_timeout_selector">
            <action
                android:id="@+id/start_preset_timer_action"
                app:destination="@id/timeout_running"
                app:popUpTo="@id/timeout_selector"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/show_custom_dialog_action"
                app:destination="@id/custom_timer_dialog" />
        </fragment>
    </navigation>
</navigation>

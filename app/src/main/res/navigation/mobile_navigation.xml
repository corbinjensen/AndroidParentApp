<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_children">

    <fragment
        android:id="@+id/navigation_children"
        android:name="ca.sfu.fluorine.parentapp.view.children.ChildrenFragment"
        android:label="@string/title_children"
        tools:layout="@layout/fragment_children" />

    <fragment
        android:id="@+id/navigation_coin_flip"
        android:name="ca.sfu.fluorine.parentapp.view.coin.CoinFlipFragment"
        android:label="@string/title_coin_flip"
        tools:layout="@layout/fragment_coin_flip" />

    <fragment
        android:id="@+id/navigation_task"
        android:name="ca.sfu.fluorine.parentapp.view.task.TaskListFragment"
        android:label="@string/tasks"
        tools:layout="@layout/fragment_task_list" />
    <fragment
        android:id="@+id/navigation_calm"
        android:name="ca.sfu.fluorine.parentapp.view.calm.CalmFragment"
        android:label="@string/calm_title"
